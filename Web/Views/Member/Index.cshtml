@{
    ViewData["Title"] = "Hesabım";
}

@model UserViewModel

<div class="container mt-5">

    <div class="row">
        <div class="col-md-6 ">
            <div class="ui floating message mb-5">
                <p class="fs-6"><strong>Merhaba @Model.FirstName</strong>, hesap detaylarını burada görüntüleyebilirsin.</p>
            </div>
            
            @if (TempData["ChangedEmail"] != null)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    @TempData["ChangedEmail"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            }
            
            <div class="ui form">
                <div class="two fields ">

                    <div class="field">
                        <label>İsim:</label>
                        <input value="@Model.FirstName" readonly="" type="text" wfd-id="id56">
                    </div>

                    <div class="field">
                        <label>Soyisim:</label>
                        <input value="@Model.LastName" readonly="" type="email" wfd-id="id57">
                    </div>

                </div>
            </div>
            


            <div class="ui form">
                <div class="two fields ">

                    <div class="field">
                        <label>Kullanıcı adı:</label>
                        <input value="@Model.UserName" readonly="" type="text" wfd-id="id56">
                    </div>

                    <div class="field">
                        <label>Email:</label>
                        <input value="@Model.Email" readonly="" type="email" wfd-id="id57">
                    </div>

                </div>
            </div>

            <div class="ui form mt-4">
                <div class="three fields ">

                    <div class="field">
                        <label>Telefon numarası:</label>
                        <input value="@Model.PhoneNumber" readonly="" type="tel" wfd-id="id58">
                    </div>

                    <div class="field text-center">
                        <label>2 Adımlı doğrulama:</label>
                        @if (@Model.TwoFactorEnabled)
                        {
                            <button class="ui positive basic button twoFactorSituation">Aktif</button>
                        }
                        else
                        {
                            <button class="ui negative basic button twoFactorSituation">Kapalı</button>
                        }
                    </div>

                    <div class="field text-center">
                        <label>Mail onay durumu:</label>
                        @if (@Model.EmailConfirmed)
                        {
                            <button class="ui positive basic button twoFactorSituation">Onaylandı</button>
                        }
                        else
                        {
                            <button class="ui negative basic button twoFactorSituation">Onaylanmadı</button>
                        }
                    </div>

                </div>
            </div>

            <a class="mt-5 text-center ui basic button  opacity-75" asp-action="EditUser" id="infoToUpdate">
               <span class="text-danger">*</span><span class="text-dark">Bu bilgileri güncellemek istiyorum.</span>
            </a>
        </div>

        <div class="col-md-6">
            <div class="text-center col-md-6 offset-md-3 ui medium fluid image">
                @if (ViewData["PictureUrl"] == null)
                {
                    <img class="rounded-circle" src="~/uploads/userPictures/defaultUserPhoto.jpg" ; />
                }
                else
                {
                    <img class="rounded-circle" src="~/uploads/userPictures/@ViewData["PictureUrl"]" ; />
                }
                
            </div>
        </div>


    </div>
</div>