<body>
    <header class="header">
        <a asp-controller="Home" asp-action="Index" class="brand">Bitki Net</a>
        <div class="menu-btn">
            <!-- <img class="menu-btn_img" src="assets/imagens/menu-alt.svg" alt="menu button"> -->
        </div>
        <div class="navegation">
            <div class="navegation-items">
                <a asp-controller="Home" asp-action="SignUp">Home</a>
                <a href="#">About</a>
                <a href="#">Explore</a>
                <a href="#">Gallery</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Member" asp-action="Index">Hesabım</a>
