<div class="wrapper">
    @if (TempData["UserFound"] as bool? ?? false)
    {
        <div class="ui info message">
            <i class="close icon" onclick="this.parentElement.style.display='none';"></i>
            <div class="header">
                Harika!
            </div>
            <div class="mt-2">
                <p>Şifre sıfırlama bağlantısı e-mail adresinize gönderildi!</p>
            </div>
        </div>
        
    }



    <form asp-controller="Home" asp-action="ForgotMyPassword" method="post">
        
        @if ((bool)(TempData["ShowWelcomeMessage"] ?? true))
        {
            <h1 class="ml10">
                <span class="text-wrapper">
                    <span class="letters fs-5">Sana hemen yardımcı olacağız!</span>
                </span>
            </h1>
        }
        

        

        <div class="input-box">
            <input type="email" placeholder="E-mail" asp-for="Email" required>
            <i class='bx bxs-user'></i>
            <span class="text-danger ms-3" asp-validation-for="Email"></span>
        </div>

        <button type="submit" class="btn">Gönder</button>
        <div class="register-link">
            <p class="text-white">Şifremi hatırlıyorum. <a asp-controller="Home" asp-action="SignIn"><strong>Giriş yap</strong></a></p>
        </div>
    </form>

    <div asp-validation-summary=ModelOnly class="alert alert-danger alert-dismissible fade show" role="alert">

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>




@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

