@{
    ViewData["Title"] = "Şifre Güncelle";

}
@model ResetPasswordViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center mb-4 mt-4">Şifre Güncelle</h2>

        @if (TempData["isPasswordUpdated"] as bool? ?? false)
        {
            <div class="ui success message">
                <i class="close icon"></i>
                <div class="header">
                    Harika!
                </div>
                <div class="mt-2">
                    <p>Şifreniz başarıyla değiştirildi.</p>
                </div>
            </div>

            <script>
                setTimeout(function () {
                    window.location.href = 'https://localhost:7041/Home/SignIn';
                }, 3000);
            </script>
        } 

        <div asp-validation-summary=ModelOnly class="alert alert-danger alert-dismissible fade show" role="alert">

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <form class="border p-4 rounded-1" asp-controller="Home" asp-action="ResetPassword" method="post">
          
            
            <div class="mb-3">
                <label for="Password" class="col-sm-2 col-form-label" asp-for="Password"></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="password" class="form-control inp-password" asp-for="Password" required>
                        <button class="border btn-password-eye" type="button">
                            <i class="bi bi-eye-slash fs-6"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
            </div>
            
            <div class="mb-3">
                <label for="PasswordConfirmed" class="col-sm-2 col-form-label" asp-for="PasswordConfirmed"></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="password" class="form-control inp-password" asp-for="PasswordConfirmed" required>
                        <button class="border btn-password-eye" type="button">
                            <i class="bi bi-eye-slash fs-6"></i>
                        </button>
                    </div>
                    <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>

                </div>
            </div>
            
          

            <div class="text-center">
                <button type="submit" class="ui yellow button">Güncelle</button>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}