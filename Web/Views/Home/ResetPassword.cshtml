<div id="box">

    @if (TempData["isPasswordUpdated"] as bool? ?? false)
    {
        <div class="ui success message">
            <i class="close icon"></i>
            <div class="header">
                Harika!
            </div>
            <div class="mt-2">
                <p>Şifreniz başarıyla değiştirildi.</p>
            </div>
        </div>

        <script>
            setTimeout(function () {
                window.location.href = '@Url.Action("Index", "Home")';
            }, 3000);
        </script>
    }


    <div asp-validation-summary="ModelOnly" class="alert alert-warning alert-dismissible fade show d-flex align-items-center mt-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <span class="ms-4">
        </span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <form id="myform-search" asp-controller="Home" asp-action="ResetPassword" method="post" autocomplete="off" />
    <h1>
        Şifre Değiştir
        <span>Lütfen güçlü bir şifre oluşturun.</span>
    </h1>
    <form>
        <p>
            <input type="password" value="" for="Password" placeholder="Yeni şifre" id="new-password" class="password" asp-for="Password" required>
            <i class="bi bi-lock-fill"></i>
            <span asp-validation-for="Password" class="text-danger"></span>
        </p>
        <p>
            <input type="password" value="" for="PasswordConfirmed" placeholder="Şifre tekrar" id="confirm-password" class="password" asp-for="PasswordConfirmed" required>
            <i class="bi bi-lock-fill"></i>
            <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>

            <div id="strong">
                <span></span>
            </div>
            <div id="valid"></div>
            <small>Şifreniz en az 6 karakter olmalı, büyük/küçük harf ve 1 özel karakter içermelidir.</small>

        </p>

        <div class="text-center">
            <button type="submit" class="ui green button">Güncelle</button>
        </div>
    </form>
</div>





